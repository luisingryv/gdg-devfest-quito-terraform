# Ejemplo de archivo de variables para el entorno de producción
# Copia este archivo a terraform.tfvars y completa los valores
# ⚠️ IMPORTANTE: Nunca commitees terraform.tfvars con valores reales

project_id = "myapp-prod"
region     = "us-central1"

# Billing (requerido si se crea proyecto nuevo)
billing_account_id = "01XXXX-XXXXXX-XXXXXX"

# Labels
owner       = "devfest-team"
cost_center = "production"

# Base de datos
db_name     = "strapi_db"
db_user     = "strapi_user"
# db_password debe ser proporcionado como variable de entorno o desde Secret Manager
# export TF_VAR_db_password="your-secure-password"

# Imágenes de contenedores (placeholders, usar imágenes reales)
backend_image  = "gcr.io/myapp-prod/strapi:latest"
frontend_image = "gcr.io/myapp-prod/nextjs:latest"

# Cloudflare (recomendado en producción)
# cloudflare_zone_id   = "your-zone-id"
# cloudflare_api_token = "your-api-token"
# domain_name          = "devfest-demo.mydomain.com"
# environment_subdomain = "prod"

